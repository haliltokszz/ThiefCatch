<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#292929"
    tools:context=".FirstActivity">

    <Button
        android:id="@+id/btnStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="41dp"
        android:layout_marginBottom="127dp"
        android:backgroundTint="#00000000"
        android:onClick="StartGame"
        android:text="START"
        android:textAlignment="center"
        android:textColor="#00BFA5"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txtTopScore"
        app:layout_constraintTop_toBottomOf="@+id/txtTopScore" />

    <TextView
        android:id="@+id/txtWelcome"
        android:layout_width="344dp"
        android:layout_height="154dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="30dp"
        android:text="Welcome Thief Catch"
        android:textAlignment="center"
        android:textColor="#AA00FF"
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@+id/txtTopScore"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtTopScore"
        android:layout_width="203dp"
        android:layout_height="151dp"
        android:layout_marginBottom="76dp"
        android:text="Top Score"
        android:textAlignment="center"
        android:textColor="#C51162"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/btnStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtWelcome" />
</androidx.constraintlayout.widget.ConstraintLayout>